<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/card_card_cv">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mycardsbackground"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/card_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/frame" />

        <TextView
            android:id="@+id/card_heroName_txt"
            android:layout_width="251dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Hero"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="@id/card_frame"
            app:layout_constraintHorizontal_bias="0.831"
            app:layout_constraintStart_toStartOf="@id/card_frame"
            app:layout_constraintTop_toTopOf="@+id/card_frame" />

        <ImageView
            android:id="@+id/card_hero_img"
            android:layout_width="310dp"
            android:layout_height="381dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_frame"
            app:layout_constraintVertical_bias="0.465"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/card_power_txt"
            android:layout_width="124dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="51"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_frame"
            app:layout_constraintEnd_toEndOf="@id/card_frame"
            app:layout_constraintStart_toStartOf="@id/card_frame" />

        <ImageView
            android:id="@+id/card_class_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>