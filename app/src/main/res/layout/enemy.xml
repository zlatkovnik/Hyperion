<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/enemy_name_txt"
        android:layout_width="115dp"
        android:layout_height="21dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_avatar_img"
        app:layout_constraintEnd_toStartOf="@+id/enemy_select_btn"
        app:layout_constraintStart_toEndOf="@+id/enemy_avatar_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/enemy_avatar_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/enemy_power_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_avatar_img"
        app:layout_constraintEnd_toEndOf="@+id/enemy_avatar_img" />

    <Button
        android:id="@+id/enemy_select_btn"
        android:layout_width="105dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:text="Select"
        app:layout_constraintBottom_toBottomOf="@+id/enemy_avatar_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506" />
</androidx.constraintlayout.widget.ConstraintLayout>